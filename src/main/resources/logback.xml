<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- コンソール出力 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日付ごとのファイル出力 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/eqp-status-messenger.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日付ごとにログファイルを作成 -->
            <fileNamePattern>logs/eqp-status-messenger.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 30日間保持 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 装置ステータス送信専用のログ -->
    <appender name="STATUS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/equipment-status.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/equipment-status.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ArtemisMessengerのログを専用ファイルにも出力 -->
    <logger name="com.equipment.messenger.ArtemisMessenger" level="INFO" additivity="true">
        <appender-ref ref="STATUS_FILE"/>
    </logger>

    <!-- ルートロガー -->
    <!-- デバッグ時は level="DEBUG" に変更 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- ActiveMQ Artemisのログレベルを制御 -->
    <logger name="org.apache.activemq" level="WARN"/>
</configuration>
